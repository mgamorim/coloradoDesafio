@model IEnumerable<ColoradoDesafio.Web.Models.ClienteViewModel>

@{
    ViewData["Title"] = "Gerenciamento de Clientes";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h2><i class="fas fa-users"></i> Clientes</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Novo Cliente
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="clientesTable">
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Nome</th>
                            <th>CPF</th>
                            <th>Tipo Pessoa</th>
                            <th>Cidade</th>
                            <th>Estado</th>
                            <th>Telefones</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var cliente in Model)
                            {
                                <tr>
                                    <td>@cliente.CodigoCliente</td>
                                    <td>@cliente.Nome</td>
                                    <td>@(cliente.CPF ?? "-")</td>
                                    <td>@cliente.TipoPessoa</td>
                                    <td>@(cliente.Cidade ?? "-")</td>
                                    <td>@(cliente.Estado ?? "-")</td>
                                    <td>
                                        @if (cliente.Telefones != null && cliente.Telefones.Any())
                                        {
                                            <span class="badge bg-info">@cliente.Telefones.Count</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">0</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@cliente.CodigoCliente" 
                                               class="btn btn-sm btn-info" title="Detalhes">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@cliente.CodigoCliente" 
                                               class="btn btn-sm btn-warning" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@cliente.CodigoCliente" 
                                               class="btn btn-sm btn-danger" title="Excluir">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center">Nenhum cliente cadastrado.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#clientesTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/pt-BR.json'
                },
                order: [[0, 'desc']]
            });
        });
    </script>
}
